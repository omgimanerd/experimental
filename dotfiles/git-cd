# Git cd function to enumerate changed files, index them and allow an argument
# to quickly cd into the parent directory of the specified changed file.
if [ $# -eq 0 ]; then
  echo "git cd [n]:"
  git status -s 2> /dev/null | cut -c'4-' | nl
else
  cd $(dirname $(git status -s | \
    sed -n "$1p" | \
    cut -c'4-'))
fi
